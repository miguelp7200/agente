# Configuración de Variables de Entorno - Migración Gasco
# Actualizado para usar tabla de producción datalake-gasco

# Google Cloud Platform - Arquitectura Dual
# LECTURA: Datos de producción Gasco (solo lectura)
GOOGLE_CLOUD_PROJECT_READ=datalake-gasco
BIGQUERY_DATASET_READ=sap_analitico_facturas_pdf_qa
BUCKET_NAME_READ=miguel-test

# ESCRITURA: Operaciones del agente (ZIPs, logs)
GOOGLE_CLOUD_PROJECT_WRITE=agent-intelligence-gasco
BIGQUERY_DATASET_WRITE=zip_operations
BUCKET_NAME_WRITE=agent-intelligence-zips

# Service Account Credentials (desarrollo local)
# DESARROLLO: Usar Application Default Credentials (gcloud auth application-default login)
# Solo especificar si se necesitan Service Account específicas
# GOOGLE_APPLICATION_CREDENTIALS_MCP=./keys/mcp-toolbox-key.json
# GOOGLE_APPLICATION_CREDENTIALS_FILE=./keys/file-service-key.json  
# GOOGLE_APPLICATION_CREDENTIALS_ADK=./keys/adk-agent-key.json

# Service Account Names (producción Cloud Run)
SERVICE_ACCOUNT_MCP=mcp-toolbox-sa@agent-intelligence-gasco.iam.gserviceaccount.com
SERVICE_ACCOUNT_FILE=file-service-sa@agent-intelligence-gasco.iam.gserviceaccount.com
SERVICE_ACCOUNT_ADK=adk-agent-sa@agent-intelligence-gasco.iam.gserviceaccount.com

# Configuración regional (compartida)
GOOGLE_CLOUD_LOCATION=us-central1

# Vertex AI - No requiere API key
# Se usa Application Default Credentials (ADC)
# Configurado con: gcloud auth application-default login
GOOGLE_GENAI_USE_VERTEXAI=true

# LangExtract configuración opcional
LANGEXTRACT_MODEL=gemini-2.5-flash
LANGEXTRACT_TEMPERATURE=0.3
LANGEXTRACT_MAX_WORKERS=3

# Debugging
DEBUG_MODE=true
LOG_LEVEL=INFO

# Configuración de empaquetado ZIP
ZIP_THRESHOLD=5
ZIP_PREVIEW_LIMIT=3
ZIP_EXPIRATION_DAYS=7

# Límites de visualización en el chat
MAX_PDF_LINKS_DISPLAY=10
PDF_SERVER_PORT=8011

# Configuración de API y MCP Toolbox
PORT=8080
MCP_TOOLBOX_URL=http://127.0.0.1:5000

# Cloud Run Service URL (para URLs de descarga)
CLOUD_RUN_SERVICE_URL=https://invoice-backend-819133916464.us-central1.run.app

# Nota importante:
# Este PoC NO requiere LANGEXTRACT_API_KEY
# Usa Vertex AI con Application Default Credentials
