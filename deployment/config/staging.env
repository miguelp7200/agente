# Configuración de Variables de Entorno - Staging Cloud Run
# Para testing y validación antes de producción

# Google Cloud Platform - Arquitectura Dual (STAGING)
# LECTURA: Datos de producción Gasco (solo lectura)
GOOGLE_CLOUD_PROJECT_READ=datalake-gasco
BIGQUERY_DATASET_READ=sap_analitico_facturas_pdf_qa
BUCKET_NAME_READ=miguel-test

# ESCRITURA: Operaciones del agente (ZIPs, logs) - Staging bucket
GOOGLE_CLOUD_PROJECT_WRITE=agent-intelligence-gasco
BIGQUERY_DATASET_WRITE=zip_operations_staging
BUCKET_NAME_WRITE=agent-intelligence-zips-staging

# Service Account Names (staging Cloud Run)
SERVICE_ACCOUNT_MCP=mcp-toolbox-sa@agent-intelligence-gasco.iam.gserviceaccount.com
SERVICE_ACCOUNT_FILE=file-service-sa@agent-intelligence-gasco.iam.gserviceaccount.com
SERVICE_ACCOUNT_ADK=adk-agent-sa@agent-intelligence-gasco.iam.gserviceaccount.com

# Configuración regional (compartida)
GOOGLE_CLOUD_LOCATION=us-central1

# Vertex AI - Usar Service Account en Cloud Run
GOOGLE_GENAI_USE_VERTEXAI=true

# LangExtract configuración para testing
LANGEXTRACT_MODEL=gemini-2.5-flash
LANGEXTRACT_TEMPERATURE=0.3
LANGEXTRACT_MAX_WORKERS=3

# Debugging (HABILITADO en staging)
DEBUG_MODE=true
LOG_LEVEL=DEBUG

# Configuración de empaquetado ZIP (reducida para testing)
ZIP_THRESHOLD=3
ZIP_PREVIEW_LIMIT=5
ZIP_EXPIRATION_DAYS=1

# Límites de visualización en el chat
MAX_PDF_LINKS_DISPLAY=5
PDF_SERVER_PORT=8011

# Configuración de API y MCP Toolbox (Cloud Run interno)
PORT=8080
MCP_TOOLBOX_URL=http://localhost:5000

# Cloud Run específico
CLOUD_RUN_ENVIRONMENT=staging
CLOUD_RUN_REGION=us-central1
CLOUD_RUN_PROJECT=agent-intelligence-gasco

# Security headers (relajadas para testing)
SECURE_HEADERS=false
CORS_ORIGINS=*

# Performance tuning (reducido para staging)
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=600

# Testing específico
ENABLE_TEST_ENDPOINTS=true
MOCK_EXTERNAL_APIS=false
